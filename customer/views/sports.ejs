<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head'); %>
    <link rel="stylesheet" href="/css/sports.css">
    <title>Sports</title>
</head>
<body>
    <header>
        <%- include('./partials/nav', {cp: 'sports'}); %>
    </header>
    <section class="container my-5">
        <h3 class="display-3 text-center">Sports</h3>
        <div class="row d-flex justify-content-center">
            <% articles.forEach((article) => { %>
                <div class="card col-md-6 p-3 m-3">
                    <img src="<%=article.urlToImage%>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><%=article.title%></h5>
                        <span class="h6"><%=article.author%></span>
                        <span class="h6"> - <i><%=(new Date(Date.parse(article.publishedAt))).toDateString()%></i></span>
                        <p class="card-text"><%=article.content.replace(/\[\+\d+ chars\]$/, '')%></p>
                        <a href="<%=article.url%>" class="btn btn-dark">Go to article</a>
                    </div>
                </div>
            <% }); %>
        </div>
    </section>
    <%- include('./partials/footer'); %>
</body>
</html>